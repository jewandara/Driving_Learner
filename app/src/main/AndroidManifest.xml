            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity android:name=".LoginActivity" android:label="Sign In"></activity>
        <activity android:name=".MainActivityStudent" android:label="STUDENT LEARNER DRIVER"></activity>
        <activity android:name=".MainActivityTuter" android:label="TUTER LEARNER DRIVER"></activity>
